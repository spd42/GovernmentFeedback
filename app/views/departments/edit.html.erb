<div class="col-md-6 col-md-offset-3">

	<div class="edit-department-form">

		<h1>Edit Politician</h1>

		<%= simple_form_for @department, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
			<%= f.file_field :department_img %>
			<%= f.input :title, label: "Politician" %>
			<%= f.input :description %>
			<%= f.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>

</div>